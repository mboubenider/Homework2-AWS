<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXButton?>


<HBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <HBox>
            <ListView fx:id = "studentlistView" prefWidth="500"></ListView>
    </HBox>
    <VBox>
        <Button text="CREATE DATABASE" prefWidth="150" fx:id="createbutton"/>
        <Button text="DELETE DATABASE" prefWidth="150" fx:id="deletebutton"/>
        <Button text="LOAD DATABASE" prefWidth="150" fx:id="loadbutton"/>
        <Label alignment="CENTER" prefWidth="150" prefHeight="50">Filters</Label>

        <JFXButton text="GPA FILTER (>=3.0)" prefWidth="150" fx:id="gpabutton"/>
        <JFXButton text="MAJOR FILTER 'Biology'" prefWidth="150" fx:id="majorbutton"/>
        <JFXButton text="AGE FILTER (>=21)" prefWidth="150" fx:id="agebutton"/>
        <ListView fx:id = "filterlistView" prefWidth="300"></ListView>
    </VBox>
</HBox>
